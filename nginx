# Основной сайт
server {
    listen 443 ssl http2;
    server_name vipnomerastore.ru www.vipnomerastore.ru;

    # Логирование (специфичное для сайта)
    access_log /var/log/nginx/vipnomerastore_access.log;
    error_log /var/log/nginx/vipnomerastore_error.log warn;

    # SSL (ваши существующие настройки)
    ssl_certificate /etc/letsencrypt/live/vipnomerastore.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/vipnomerastore.ru/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # ИСПОЛЬЗОВАНИЕ rate limiting (определенного в nginx.conf)
    limit_req zone=general burst=20 nodelay;

    # Security headers (специфичные для сайта)
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Frame-Options DENY;
    add_header Referrer-Policy "origin-when-cross-origin";
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Защита от доступа к чувствительным файлам
    location ~ /\.(?!well-known).* {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ ^/(\.env|next\.config\.|package\.json|ecosystem\.config\.) {
        deny all;
    }

    location ~ ^/node_modules/ {
        deny all;
    }

    # Next.js статические файлы с ИСПОЛЬЗОВАНИЕМ кеша (определенного в nginx.conf)
    location /_next/static/ {
        proxy_pass http://localhost:3000;
        proxy_cache my_cache;
        proxy_cache_valid 200 1y;
        add_header Cache-Control "public, immutable";
        expires 1y;
    }

    # Статические ресурсы из public/
    location ~* ^/(assets|favicon|manifest|robots|sitemap)/ {
        proxy_pass http://localhost:3000;
        proxy_cache my_cache;
        proxy_cache_valid 200 30d;
        add_header Cache-Control "public";
        expires 30d;
    }

    # API routes с ИСПОЛЬЗОВАНИЕМ API rate limiting
    location /api/ {
        limit_req zone=api burst=10 nodelay;
        
        proxy_pass http://localhost:1337/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # API таймауты
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }

    # Все остальное - проксируем на Next.js
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Next.js таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

# --- DEV VERSION ---
server {
    server_name dev.vipnomerastore.ru;
    listen 443 ssl http2;

    # Логирование
    access_log /var/log/nginx/vipnomerastore_dev_access.log;
    error_log /var/log/nginx/vipnomerastore_dev_error.log warn;

    # Rate limiting
    limit_req zone=general burst=20 nodelay;

    # Security headers
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";

    # Next.js статические файлы
    location /_next/static/ {
        proxy_pass http://localhost:3001; # dev версия на другом порту
        proxy_cache my_cache;
        proxy_cache_valid 200 1h; # меньшее кеширование для dev
    }

    # API routes (dev API на 1338)
    location /api/ {
        limit_req zone=api burst=10 nodelay;
        
        proxy_pass http://localhost:1338/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Все остальное - dev Next.js
    location / {
        proxy_pass http://localhost:3001; # dev версия
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # SSL
    ssl_certificate /etc/letsencrypt/live/dev.vipnomerastore.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dev.vipnomerastore.ru/privkey.pem;
}

# Wildcard для региональных поддоменов
server {
    server_name ~^(?!dev$)(?<region>[a-z0-9-]+)\.vipnomerastore\.ru$;
    listen 443 ssl http2;

    # Логирование поддоменов
    access_log /var/log/nginx/vipnomerastore_subdomains_access.log;
    error_log /var/log/nginx/vipnomerastore_subdomains_error.log warn;

    # ИСПОЛЬЗОВАНИЕ rate limiting
    limit_req zone=general burst=20 nodelay;

    # Security headers
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Frame-Options DENY;
    add_header Referrer-Policy "origin-when-cross-origin";

    # Защита от доступа к чувствительным файлам
    location ~ /\.(?!well-known).* {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Next.js статические файлы с кешированием
    location /_next/static/ {
        proxy_pass http://localhost:3000;
        proxy_cache my_cache;
        proxy_cache_valid 200 1y;
        add_header Cache-Control "public, immutable";
    }

    # API routes с rate limiting
    location /api/ {
        limit_req zone=api burst=10 nodelay;
        
        proxy_pass http://localhost:1337/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Передаем регион как заголовок в Next.js
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Region $region;
        proxy_cache_bypass $http_upgrade;
    }

    # SSL
    ssl_certificate     /root/.acme.sh/vipnomerastore.ru_ecc/fullchain.cer;
    ssl_certificate_key /root/.acme.sh/vipnomerastore.ru_ecc/vipnomerastore.ru.key;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

# Редирект с HTTP на HTTPS
server {
    listen 80;
    server_name vipnomerastore.ru www.vipnomerastore.ru *.vipnomerastore.ru;
    return 301 https://$server_name$request_uri;
}